<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <g:HTMLPanel>
        <b:PageHeader text="Page etudiant" subText="Opus"/>
        <div style="width: 100%; height: 80%; border: 2px solid black; padding: 5px;">
            <div style="float: left; width: 10vw; height: 10vw; border: 2px solid black; padding: 5px;">Photo</div>
            <div style="float: left; width: 20%; height:auto; padding: 5px;">
                <b:Form ui:field="form">
                    <b:FormGroup>
                        <b:FormLabel ui:field="lblPrenom" text="info goes here"/>
                        <b:FormLabel ui:field="lblNom" text="info goes here"/>
                    </b:FormGroup>
                    <b:FormGroup>
                        <b:FormLabel ui:field="lblProgrammeEtude" text="info goes here"/>
                        <b:FormLabel text=", Stage: "/>
                        <b:FormLabel ui:field="lblStage" text="info goes here"/>
                    </b:FormGroup>
                    <b:FormGroup>
                        <b:FormLabel ui:field="lblEcole" text="Information école"/>
                    </b:FormGroup>
                </b:Form>
            </div>
            <div style="float: left; width: 10vw; border: 2px solid black; padding: 5px;">

                <div style="float: left; width: 2vw; height: 2vw; border: 2px solid black; padding: 5px;">
                        <b:Anchor ui:field="anchorClose" icon="CLOSE"/>
                </div>
                <div style="float: left; width: 2vw; height: 2vw; border: 2px solid black; padding: 5px;">
                    <b:Anchor ui:field="anchorCheck" icon="CHECK"/>
                </div>
            </div>
            <div style="clear:left; width: 100%; padding: 5px;">
                <b:NavTabs>
                    <b:TabListItem active="true" dataTarget="#tab1" text="Cométences"/>
                    <b:TabListItem dataTarget="#tab2" text="Intérêts et objectifs"/>
                </b:NavTabs>
                <b:TabContent>
                    <b:TabPane fade="true" in="true" active="true" id="tab1">
                        <b:Form ui:field="form2">
                            <b:FormGroup>
                                <b:FormLabel text="Competences: "/>
                                <b:FormLabel ui:field="lblCompetences" text="info goes here"/>
                            </b:FormGroup>
                        </b:Form>
                    </b:TabPane>
                    <b:TabPane fade="true" id="tab2">
                        <b:Form ui:field="form3">
                            <b:FormGroup>
                                <b:FormLabel text="Interets et objectifs: "/>
                                <b:FormLabel ui:field="lblInteretsObjectifs" text="info goes here"/>
                            </b:FormGroup>
                        </b:Form>
                    </b:TabPane>
                </b:TabContent>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>