<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <g:HTMLPanel>
        <b:PageHeader text="Modification de votre profil" subText="Opus"/>



        <div style="width: 100%; height: 80%; border: 2px solid black; padding: 5px;">
            <b:Form ui:field="form">
                <b:FieldSet>

                    <b:FormGroup>
                        <b:FormLabel b:for="formNomEntreprise" ui:field="lblNomEntreprise" text="Nom de l'entreprise:"/>
                        <b:TextBox ui:field="tbNomEntreprise" b:id="formNomEntreprise"/>
                    </b:FormGroup>

                    <b:FormGroup>
                        <b:FormLabel b:for="formDomaine" text="Domaine:"/>
                        <b:TextBox ui:field="tbDomaine" b:id="formDomaine"/>
                    </b:FormGroup>

                    <b:FormGroup>
                        <b:FormLabel b:for="formLieu"  text="Lieu"/>
                        <b:TextBox ui:field="tbLieu" b:id="formLieu"/>
                    </b:FormGroup>

                    <b:FormGroup>
                        <b:FormLabel b:for="formSommaire"  text="Sommaire"/>
                        <b:TextBox ui:field="tbSommaire" b:id="formSommaire"/>
                    </b:FormGroup>

                    <b:FormGroup>
                        <b:FormLabel b:for="formTechnologies"  text="Technologies"/>
                        <b:TextBox ui:field="tbTechnologies" b:id="formTechnologies"/>
                    </b:FormGroup>

                    <b:Button>Modifier mon profil</b:Button>

                </b:FieldSet>
            </b:Form>
        </div>
    </g:HTMLPanel>


</ui:UiBinder>