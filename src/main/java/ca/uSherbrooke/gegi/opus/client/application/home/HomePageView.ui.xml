<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <g:HTMLPanel>
        <b:PageHeader text="Page etudiant" subText="Opus"/>
        <b:Row width="80%">
            <b:Column size="XS_1">
                <b:Anchor ui:field="anchorCheck" icon="CHECK"/>
            </b:Column>
            <b:Column size="XS_1">
                <b:Anchor ui:field="anchorClose" icon="CLOSE"/>
            </b:Column>
        </b:Row>
        <b:Row>
            <b:Column size="SM_6">
                <b:Form ui:field="form">
                    <b:FieldSet>
                        <b:FormGroup>
                            <b:FormLabel height="80%" text="Prenom: "/>
                            <b:FormLabel ui:field="lblPrenom" text="info goes here"/>
                        </b:FormGroup>
                        <b:FormGroup>
                            <b:FormLabel text="Nom: "/>
                            <b:FormLabel ui:field="lblNom" text="info goes here"/>
                        </b:FormGroup>
                        <b:FormGroup>
                            <b:FormLabel text="Programme d'etude: "/>
                            <b:FormLabel ui:field="lblProgrammeEtude" text="info goes here"/>
                        </b:FormGroup>
                        <b:FormGroup>
                            <b:FormLabel text="Stage: "/>
                            <b:FormLabel ui:field="lblStage" text="info goes here"/>
                        </b:FormGroup>
                        <b:FormGroup>
                            <b:FormLabel text="Ecole: "/>
                            <b:FormLabel ui:field="lblEcole" text="info goes here"/>
                        </b:FormGroup>
                        <b:FormGroup>
                            <b:FormLabel text="Competences: "/>
                            <b:FormLabel ui:field="lblCompetences" text="info goes here"/>
                        </b:FormGroup>
                        <b:FormGroup>
                            <b:FormLabel text="Interets et objectifs: "/>
                            <b:FormLabel ui:field="lblInteretsObjectifs" text="info goes here"/>
                        </b:FormGroup>
                    </b:FieldSet>
                </b:Form>
            </b:Column>
        </b:Row>
    </g:HTMLPanel>
</ui:UiBinder>