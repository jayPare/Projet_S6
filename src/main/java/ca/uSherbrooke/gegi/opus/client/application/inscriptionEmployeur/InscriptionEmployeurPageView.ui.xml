<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <g:HTMLPanel>
        <b:PageHeader text="Inscription" subText="Opus"/>
        <b:Panel paddingBottom="10" paddingLeft="10" paddingRight="10" paddingTop="10">
                <b:Form>
                    <b:FieldSet>

                        <b:FormGroup>
                            <b:FormLabel b:for="formNomEntreprise" ui:field="lblNomEntreprise" text="Nom de l'entreprise:"/>
                            <b:TextBox ui:field="tbNomEntreprise" b:id="formNomEntreprise"/>
                        </b:FormGroup>

                        <b:FormGroup>
                            <b:FormLabel b:for="formDomaine" text="Domaine:"/>
                            <b:TextBox ui:field="tbDomaine" b:id="formDomaine"/>
                        </b:FormGroup>

                        <b:FormGroup>
                            <b:FormLabel b:for="formLieu"  text="Lieu"/>
                            <b:TextBox ui:field="tbLieu" b:id="formLieu"/>
                        </b:FormGroup>

                        <b:FormGroup>
                            <b:FormLabel b:for="formSommaire"  text="Sommaire"/>
                            <b:TextArea ui:field="taSommaire" b:id="formSommaire"/>
                        </b:FormGroup>

                        <b:FormGroup>
                            <b:FormLabel b:for="formTechnologies"  text="Technologies"/>
                            <b:TextArea ui:field="taTechnologies" b:id="formTechnologies"/>
                        </b:FormGroup>

                        <b:FormGroup>
                            <b:FormLabel b:for="formNature"  text="Nature"/>
                            <b:TextArea ui:field="taNature" b:id="formNature"/>
                        </b:FormGroup>

                        <b:Button ui:field="btnSubscribe">S'inscrire</b:Button>

                    </b:FieldSet>
                </b:Form>
        </b:Panel>
    </g:HTMLPanel>
</ui:UiBinder>
